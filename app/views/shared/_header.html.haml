.header
  .header__main
    .header__main__top
      .header__main__top__logo
        =link_to root_path, class: 'header__main__top__logo__a' do
          = image_tag 'common/images-mercari.png', size: "134x36", alt: 'Mercari', class: 'header__main__top__logo__img'
      .header__main__top__search
        %form.header__main__top__search__box
          %input.header__main__top__search__box__in{placeholder: "何かお探しですか？"}
          %button.header__main__top__search__box__icon{title: '検索', type: 'submit'}
            %i.fas.fa-search

    .header__main__bottom
      .header__main__bottom__nav
        .header___main__bottom__nav__category
          =link_to '#', id: 'category-list-box' do
            %i.fas.fa-list-ul.header__main__bottom__nav__category__icon
              .header__main__bottom__nav__category__icon__text
                カテゴリーから探す

        .header__main__bottom__nav__brand
          =link_to '#', id: 'brand-list-box'do
            %i.fas.fa-tags.header__main__bottom__nav__brand__icon
              .header__main__bottom__nav__brand__icon__text
                ブランドから探す

      .header__main__bottom__user
        .header__main__bottom__user__register-button
          =link_to step1_signup_index_path, class:"header__main__bottom__user__register-button__text" do
            新規会員登録
        .header__bottom__user__login-button
          =link_to '#',  class:"header__main__bottom__user__login-button__text" do
            ログイン
