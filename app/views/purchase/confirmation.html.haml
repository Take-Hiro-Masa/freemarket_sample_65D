=render "signup/header"
.buy-main
  .buy-main__box
    .buy-content
      %h2.buy-content__header
        購入内容の確認
      .buy-content__product
        .buy-content__product__inner
          .buy-product-main
          = @item.images.each do |image|
            = image_tag image, size: '64x64', class: 'buy-product-image'
            .buy-product-name 
              = @item.name
          .buy-form
            %p.buy-price
              ¥
              = @item.price
              %span送料込み
            .buy-have-point
              ポイントはありません
            .buy-price-table
              .buy-price-table__left
                支払金額
              .buy-price-table__right
                ¥
                = @item.price
            = form_tag(pay_purchase_path(@item) , method: :post) do
              %button.btn-default
                購入する
      .buy-content__user-info
        .buy-content__user-info__inner
          %h3 配送先
          .user-info-text
            %br
            〒 #{current_user.postal_code}
            %br
            = @addresses
            %br
            = @full_name

          .user-info-fix
            = link_to "#" do
              変更する
              %span 
              %i.fa.fa-chevron-right
      .buy-content__user-info
        .buy-content__user-info__inner
          %h3 支払方法
          .user-info-text
            **** **** **** #{@default_card_information.last4}
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
          .user-info-fix
            = link_to "#" do
              変更する
              %span
              %i.fa.fa-chevron-right

=render "signup/footer"